[querys]
ErststimmeKandidatListe=SELECT Vorname, Name, SUM(1Anzahl) AS Gesamtstimmen FROM 1stimme, Direktkandidaten WHERE 1stimme.D_ID = Direktkandidaten.D_ID GROUP BY 1stimme.D_ID ORDER BY SUM(1Anzahl) DESC;
BestimmteErststimmeKandidat=SELECT Vorname, Name, SUM(1Anzahl) AS Stimmen FROM 1stimme, Direktkandidaten WHERE 1stimme.D_ID = Direktkandidaten.D_ID AND 1stimme.D_ID = @d GROUP BY 1stimme.D_ID LIMIT 0,1;
ZweitstimmeParteiListe=SELECT P_Bezeichnung, SUM(2Anzahl) AS Gesamtstimmen FROM 2stimme, Partei WHERE 2stimme.P_ID = Partei.P_ID GROUP BY 2stimme.P_ID ORDER BY SUM(2Anzahl) DESC;
BestimmteZweitstimmePartei=SELECT P_Bezeichnung, SUM(2Anzahl) AS Stimmen FROM 2stimme, partei WHERE partei.P_ID = 2stimme.P_ID AND 2stimme.P_ID = @p GROUP BY 2stimme.P_ID LIMIT 0,1;
BestimmteStimmenDirektkandidatWahllokal=SELECT 1Anzahl FROM 1stimme WHERE D_ID = @d AND W_ID = @w LIMIT 0,1;
BestimmteStimmenParteiWahllokal=SELECT 2Anzahl FROM 2stimme WHERE P_ID = @d AND W_ID = @w LIMIT 0,1;
BestimmterDirektkandidat=SELECT Vorname, Name FROM direktkandidaten WHERE D_ID = @d LIMIT 0,1;
BestimmtePartei=SELECT P_Bezeichnung, Farbe, Listenplaetze FROM partei WHERE P_ID = @p 0,1;
BestimmtesWahllokal=SELECT W_Bezeichnung, PLZ, Straße, Wahlberechtigte, Wahlbeteiligung, SUM(Wahlbeteiligung)/SUM(Wahlberechtigte)*100 AS BestimmteWahlbeteiligung FROM wahllokal WHERE W_ID = @w LIMIT 0,1;
WahllokaleListe=SELECT W_ID, W_Bezeichnung FROM Wahllokal;
AdresseAlleWahllokaleListe=SELECT W_ID, W_Bezeichnung, Straße FROM Wahllokal ORDER BY W_Bezeichnung;
BestimmteParteiUndKandidat=SELECT P_Bezeichnung, Vorname, Name FROM Direktkandidaten D, Partei P, stellt S WHERE D.D_ID = S.D_ID and S.P_ID = P.P_ID and (D.D_ID=@k OR Name = @k) LIMIT 0,1;
FarbeListe=SELECT P_Bezeichnung, Farbe FROM Partei WHERE P_bezeichnung = @f OR P_ID = @f;
KandidatListe=SELECT D_ID, Vorname, Name FROM Direktkandidaten;
BestimmterKandidatUndPartei=SELECT Vorname, Name FROM Direktkandidaten D, Partei P, stellt S WHERE D.D_ID = S.D_ID AND P.P_ID = S.P_ID AND (Name=@pk OR S.P_ID=@pk) LIMIT 0,1;
KandidatUndParteiOrderByKandidatAscListe=SELECT Vorname, Name, P_Bezeichnung FROM Direktkandidaten D, Partei P, stellt S WHERE D.D_ID = S.D_ID AND S.P_ID = P.P_ID ORDER BY Name;
ParteiUndKandidatOrderByParteiAscListe=SELECT P_Bezeichnung, Vorname, Name FROM Direktkandidaten D, Partei P, stellt S WHERE D.D_ID = S.D_ID AND S.P_ID = P.P_ID ORDER BY P_Bezeichnung;
PlätzeBestimmterParteiFürNeuruppinAlsBundestag=SELECT P_Bezeichnung, (SUM(2Anzahl)/(SELECT SUM(2Anzahl)/(SELECT SUM(2Anzahl) FROM 2stimme)*100 FROM 2stimme, Partei WHERE 2stimme.P_ID = Partei.P_ID AND Partei.P_ID=@x GROUP BY 2stimme.P_ID)) *2,99 AS Plätze FROM 2stimme, Partei WHERE Partei.P_ID=@x ORDER BY Plätze DESC LIMIT 0,1;


